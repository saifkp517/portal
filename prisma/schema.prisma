generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id                 String   @id @default(uuid())
  building_name      String
  asset_type         String
  investment_size    String
  lockin             String
  entry_yeild        String
  irr                String
  multiplier         String
  minimum_investment String
  location           String
  tenant             String
  overview           String
  floorplan          Json?
  tenant_details     Json?
  images             String[]
  creditriskanalysis String?
  funded             Int      @default(0)
  tables             Json?
  additional         Json?
  user               User     @relation(fields: [userId], references: [email])
  userId             String
}

enum Role {
  PARTNER
  ADMIN
}

model User {
  id         String     @id @default(uuid())
  name       String?
  email      String     @unique
  password   String
  role       Role
  properties Property[]
  subscribed Boolean @default(true)
}

model Investor {
  id       String  @id @default(uuid())
  name     String?
  phoneno  String?
  email    String?
  password String?
  provider String?
  verified Boolean @default(false)
}
